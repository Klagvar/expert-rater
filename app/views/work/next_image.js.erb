<% if @next_image %>
// Исправленный селектор для нового класса изображения
document.querySelector('.scalable-image').src = '<%= asset_path "pictures/#{@next_image.file}" %>';
$('.up').text('<%= @next_image.name %>');
// Обновляем ID в ссылках
$('.nav-link').attr('href', function() {
    return this.href.replace(/image_id=\d+/, 'image_id=<%= @next_image.id %>');
});
<% else %>
alert('Это последнее изображение в теме');
<% end %>